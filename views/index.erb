<!-- http://www.daterangepicker.com/#usage -->
<script type="text/javascript" src="//cdn.jsdelivr.net/jquery/1/jquery.min.js"></script>
<script type="text/javascript" src="//cdn.jsdelivr.net/momentjs/latest/moment.min.js"></script>
<script type="text/javascript" src="//cdn.jsdelivr.net/bootstrap.daterangepicker/2/daterangepicker.js"></script>
<link rel="stylesheet" type="text/css" href="//cdn.jsdelivr.net/bootstrap.daterangepicker/2/daterangepicker.css" />


<div class="jumbotron">
    <h1>Strava thing!</h1>
<p>
Hacky at the moment.<p>
Haven't got any account syncing, so you'll need to go <a href="https://www.strava.com/settings/api">here</a> and create an application.<p>
Paste your (public) 'client access token' in the box, choose a date range and hit go.<p>
</p>

<form action='results' method='post'>
  <div class="form-group">
    <label for="access_token_input">Access Token</label>
    <input type="text" id="access_token_input"  name="access_token"  />
  </div>

  <div class="form-group">
    <label for="daterangepicker">Date Range</label>
    <input type="text" id="daterangepicker" name="daterange" />
  </div>

  <script type="text/javascript">
  $(function() {

      var start = moment().subtract(29, 'days');
      var end = moment();

      function cb(start, end) {
          $('input[name="daterange"] span').html(start.format('DD-MM-YYY') + ' - ' + end.format('DD-MM-YYY'));
      }

      $('input[name="daterange"]').daterangepicker({
        "locale": {
        "format": "DD/MM/YYYY"
          },
          startDate: start,
          endDate: end,
          ranges: {
             'Today': [moment(), moment()],
             'Yesterday': [moment().subtract(1, 'days'), moment().subtract(1, 'days')],
             'Last 7 Days': [moment().subtract(6, 'days'), moment()],
             'Last 30 Days': [moment().subtract(29, 'days'), moment()],
             'This Month': [moment().startOf('month'), moment().endOf('month')],
             'Last Month': [moment().subtract(1, 'month').startOf('month'), moment().subtract(1, 'month').endOf('month')]
          }
      }, cb);

      cb(start, end);

  });
  </script>

  <div class="form-group">
    <label class="radio-inline"><input type="radio" name="runrideradio" value="run" checked>Run</label>
    <label class="radio-inline"><input type="radio" name="runrideradio" value="ride">Ride</label>
    <label class="radio-inline"><input type="radio" name="runrideradio" value="both">Both</label>
  </div>

  <button type='submit' class='btn btn-primary'>Go!</button>

</form>

</div>
